        <div class="d-flex flex-column align-items-start my-5">
            <div class="d-flex align-items-center justify-content-between col-md-8">
                <h1 class="h1 text-gray-800">{{ fournisseur.nom }}</h1>
                <a href="{{ path('app_fournisseur_index') }}" class="d-none d-sm-inline-block shadow-sm btn btn-sm btn-primary">
