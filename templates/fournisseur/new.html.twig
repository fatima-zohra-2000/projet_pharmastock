{% extends 'base.html.twig' %}

{% block title %}Nouveau Fournisseur{% endblock %}

{% block body %}
{#    <h1>Create new Fournisseur</h1>#}

{#    {{ include('fournisseur/_form.html.twig') }}#}

{#    <a href="{{ path('app_fournisseur_index') }}">back to list</a>#}

    <div class="mx-4 my-3">
        <h1 class="h1 text-gray-800 mb-5 text-center">Création d'un nouveau fournisseur</h1>

        <div class="card py-3 px-5 w-75 mx-auto bg-white">
            <div class="card-body">
                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_label(form.nom, 'Nom :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control bg-white'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.email, 'Email :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control bg-white'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.adresse, 'Adresse :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'form-control bg-white'}}) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.telephone, 'Téléphone :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control bg-white'}}) }}
                </div>

                <div class="d-flex mt-5">
                    <button type="submit" class="mr-2 px-3 d-none d-sm-inline-block shadow-sm btn btn-primary">Enregistrer</button>
                    <a href="{{ path('app_fournisseur_index') }}" class="ml-2 d-none d-sm-inline-block shadow-sm btn btn-secondary">Annuler</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
