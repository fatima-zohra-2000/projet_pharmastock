                    <tr>
                        <th>Nom</th>
                        <th>Email</th>
                        <th>Adresse</th>
                        <th>Téléphone</th>
                        <th>Visualiser</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for fournisseur in fournisseurs %}
                        <tr>
                            <td>{{ fournisseur.nom }}</td>
                            <td>{{ fournisseur.email }}</td>
                            <td>{{ fournisseur.adresse }}</td>
                            <td>{{ fournisseur.telephone }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_fournisseur_show', {'id': fournisseur.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_fournisseur_edit', {'id': fournisseur.id}) }}" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_fournisseur_delete', {'id': fournisseur.id}) }}" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Aucun fournisseur n'est trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
