        <div class="d-sm-flex align-items-center justify-content-between mb-5 mx-5">
            <h1 class="h1 mb-0 text-gray-800">Gestion des fournisseurs</h1>
            <span class="d-lg-inline">
                <a href="{{ path('app_fournisseur_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                    Nouveau Fournisseur
                </a>
                <a href="{{ path('app_achat_new')}}" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
                    Nouvel achat
                </a>
            </span>
        </div>
        <div class="card shadow mb-5 mx-5">
            <div class="card-body table-responsive">
                <table class="table table-striped table-borderless rounded rounded-3 overflow-hidden">
