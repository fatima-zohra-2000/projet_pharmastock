    <div class="mx-4 my-3">
        <h1 class="h1 text-gray-800 mb-5 text-center">Connectez-vous</h1>

        <div class="card py-3 px-5 w-75 mx-auto bg-white">
            <div class="card-body">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.name }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    {% else %}
                        <div class="mb-4">
                            <label for="inputEmail" class="font-weight-bold text-gray-800">Email :</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control bg-white" autocomplete="email" required autofocus>
                        </div>

                        <div class="mb-4">
                            <label for="inputPassword" class="font-weight-bold text-gray-800">Password :</label>
                            <input type="password" name="password" id="inputPassword" class="form-control bg-white" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="mr-2 px-3 d-none d-sm-inline-block shadow-sm btn btn-primary" type="submit">Se connecter</button>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
