{% extends 'base.html.twig' %}

{% block title %}Nouveau Stock{% endblock %}

{% block body %}
    <div class="mx-4 my-3">
        <h1 class="h1 text-gray-800 mb-5 text-center">Création d'un stock</h1>

        <div class="card py-3 px-5 w-75 mx-auto bg-white">
            <div class="card-body">
                {{ form_start(form) }}
                    <div class="mb-4">
                        {{ form_label(form.produit_id, 'Produit :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                        {{ form_widget(form.produit_id, {'attr': {'class': 'select2 form-control custom-select bg-white'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.quantite, 'Quantité :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                        {{ form_widget(form.quantite, {'attr': {'class': 'form-control bg-white'}}) }}
                    </div>

                    <div class="mb-4">
                        {{ form_label(form.fournisseur_id, 'Fournisseur :', {'label_attr': {'class': 'font-weight-bold text-gray-800'}}) }}
                        {{ form_widget(form.fournisseur_id, {'attr': {'class': 'select2 form-control custom-select bg-white'}}) }}
                    </div>

                    <div class="d-flex mt-5">
                        <button type="submit" class="mr-2 px-3 d-none d-sm-inline-block shadow-sm btn btn-primary">Enregistrer</button>
                        <a href="{{ path('app_produit_index') }}" class="ml-2 d-none d-sm-inline-block shadow-sm btn btn-secondary">Annuler</a>
                    </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}