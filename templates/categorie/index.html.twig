{% extends 'base.html.twig' %}

{% block title %}Categorie index{% endblock %}

{% block body %}
<div class="mx-4 my-3">
    <div class="d-sm-flex align-items-center justify-content-between mb-5 mx-5">
        <h1 class="h1 mb-0 text-gray-800">Gestion des catégories</h1>
        <span class="d-lg-inline">
            <a href="{{ path('app_categorie_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                Nouvelle Catégorie
            </a>
        </span>
    </div>
    <div class="card shadow mb-5 mx-5">
        <div class="card-body table-responsive">
            <table class="table table-striped table-borderless rounded rounded-3 overflow-hidden">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Visualiser</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
                </thead>
                <tbody>
                {% for categorie in categories %}
                    <tr>
                        <td>{{ categorie.nom }}</td>
                        <td>{{ categorie.description }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-sm btn-primary">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-sm btn-secondary">
                                <i class="fas fa-edit"></i>
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_categorie_delete', {'id': categorie.id}) }}" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Aucune catégorie n'est trouvée</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
{% block footer %}{% endblock %}
