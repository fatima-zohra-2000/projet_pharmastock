    <div class="mx-4 my-3">
        <div class="d-sm-flex align-items-center justify-content-between mb-5 mx-5">
            <h1 class="h1 mb-0 text-gray-800">Gestion des commandes</h1>
            <span class="d-lg-inline">
            <a href="{{ path('app_commande_new') }}" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
                Nouvelle commande
            </a>
        </span>
        </div>
        <div class="card shadow mb-5 mx-5">
            <div class="card-body table-responsive">
                <table class="table table-striped table-borderless rounded rounded-3 overflow-hidden">
                    <thead>
                    <tr>
                        <th>Numéro de commande</th>
                        <th>Total €</th>
                        <th>TVA %</th>
                        <th>Montant TVA €</th>
                        <th>Date</th>
                        <th>Visualiser</th>
                        <th>Modifier</th>
                        <th>Rapport</th>
                        <th>Télécharger</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for commande in commandes %}
                        <tr>
                            <td>{{ commande.numCommande }}</td>
                            <td>{{ commande.total }} €</td>
                            <td>{{ commande.TVA }} %</td>
                            <td>{{ commande.mantantTVA }} €</td>
                            <td>{{ commande.date ? commande.date|date('d-m-Y à H:i:s') : '' }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-sm btn-secondary">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_commande_rapport', {'id': commande.id}) }}" class="btn btn-sm btn-info">
                                    <i class="fas fa-file"></i>
                                </a>
                            </td>
                            <td class="text-center">
                                <a href="{{ path('app_commande_rapport_download', {'id': commande.id}) }}" class="btn btn-sm btn-success">
                                    <i class="fas fa-download"></i>
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9">Aucune commande trouvée</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
